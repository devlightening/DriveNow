@model CreateContactDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<section class="ftco-section contact-section">
    <div class="container">
        <div class="row d-flex mb-5 contact-info">
            @await Component.InvokeAsync("_FooterAddressCompenentPartial")
            <div class="col-md-8 block-9 mb-md-5">
                <form class="bg-light p-5 contact-form" method="post">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Your Name" asp-for="ContactName">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Your Email" asp-for="ContactEmail">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Your Phone" asp-for="ContactPhone">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Subject" asp-for="ContactSubject">
                    </div>
                    <div class="form-group">
                        <textarea asp-for="ContactMessage" cols="30" rows="7" class="form-control" placeholder="Message"></textarea>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Send Message" class="btn btn-primary py-3 px-5">
                    </div>
                </form>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-12">
                <div id="map" class="bg-white"></div>
            </div>
        </div>
    </div>
</section>