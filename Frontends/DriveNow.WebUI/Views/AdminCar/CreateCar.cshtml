@model DriveNow.Dtos.CarDtos.CreateCarDto

@{
    ViewData["Title"] = "CreateCar";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

@section Styles {
    <link href="~/Admin/vertical/assets/css/theme-style.css" rel="stylesheet" type="text/css" />
    <link href="~/Admin/vertical/assets/css/CarListStyleSheet.css" rel="stylesheet" type="text/css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/MaterialDesign-Webfont/6.5.95/css/materialdesignicons.min.css" rel="stylesheet" type="text/css" />

    <style>
        /* Genel stiller buraya gelecek (öncekiyle aynı) */
        .form-container-wrapper {
            background: linear-gradient(135deg, rgba(255, 255, 255, 0.9) 0%, rgba(240, 248, 255, 0.9) 100%);
            border-radius: 18px;
            box-shadow: 0 20px 50px rgba(0, 0, 0, 0.15);
            padding: 3rem;
            animation: slideInUp 0.8s ease-out forwards;
            transform-origin: center;
            margin-top: 2rem;
        }

        @@keyframes slideInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .form-container-wrapper h4 {
            color: #2c3e50;
            font-weight: 900;
            letter-spacing: -1px;
            margin-bottom: 2.5rem;
            text-align: center;
            font-size: 2.5rem;
            text-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
        }

        .form-section-title {
            font-size: 1.6rem;
            font-weight: 800;
            color: #34495e;
            margin-bottom: 2rem;
            padding-bottom: 0.75rem;
            border-bottom: 3px solid #3498db;
            display: inline-block;
            position: relative;
            padding-left: 40px; /* İkon için yer */
        }

        .form-section-title::before {
            font-family: 'Material Design Icons';
            font-size: 1.8rem;
            color: #3498db;
            position: absolute;
            left: 0;
            top: 50%;
            transform: translateY(-50%);
            line-height: 1; /* İkon hizalaması için */
        }

        .form-section-title.car-details-title::before {
            content: '\F0405'; /* Araba ikonu */
        }

        .form-section-title.specs-title::before {
            content: '\F0BEF'; /* Özellikler ikonu */
        }

        .form-group {
            margin-bottom: 2rem;
        }

        .form-group label {
            font-weight: 700;
            color: #34495e;
            margin-bottom: 0.8rem;
            font-size: 1rem;
            display: block;
        }

        .input-wrapper {
            position: relative;
        }

        .input-wrapper .form-control,
        .form-select {
            border-radius: 12px !important;
            height: 56px !important;
            font-size: 1.1rem !important;
            border: 2px solid #e0e0e0 !important;
            padding-left: 3.5rem !important; /* İkon için alan */
            transition: border-color 0.3s ease, box-shadow 0.3s ease;
            background-color: #fdfdfd !important;
        }

        .input-wrapper .form-control:focus,
        .form-select:focus {
            border-color: #3498db !important;
            box-shadow: 0 0 0 0.35rem rgba(52, 152, 219, 0.25) !important;
        }

        .input-wrapper .input-group-text {
            position: absolute;
            left: 12px;
            top: 50%;
            transform: translateY(-50%);
            border: none;
            background: none;
            color: #3498db;
            font-size: 1.4rem;
            z-index: 5;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100%;
        }

        /* Select2 stilleri */
        .select2-container--default .select2-selection--single {
            border-radius: 12px !important;
            height: 56px !important;
            border: 2px solid #e0e0e0 !important;
            background-color: #fdfdfd !important;
            transition: border-color 0.3s ease, box-shadow 0.3s ease;
            padding-left: 3.5rem !important; /* İkon için alan */
        }

        .select2-container--default.select2-container--open .select2-selection--single {
            border-color: #3498db !important;
            box-shadow: 0 0 0 0.35rem rgba(52, 152, 219, 0.25) !important;
        }

        .select2-container--default .select2-selection--single .select2-selection__arrow {
            height: 56px !important;
            top: 0 !important;
        }

        .select2-container--default .select2-selection--single .select2-selection__arrow b {
            margin-top: -6px !important;
        }

        .select2-container {
            width: 100% !important;
        }

        .select2-container--open .select2-dropdown--below {
            border-color: #3498db !important;
            border-top: none !important;
            box-shadow: 0 0 0 0.35rem rgba(52, 152, 219, 0.25) !important;
            border-radius: 0 0 12px 12px !important;
        }

        .select2-container--default .select2-selection--single .select2-selection__rendered {
            padding-left: 3.5rem !important; /* İkon için alan */
            line-height: 56px !important;
            color: #555 !important;
            font-size: 1.1rem !important;
            font-weight: normal;
        }

        .select2-container--default .select2-selection--single .select2-selection__placeholder {
            color: #999 !important;
            font-size: 1.1rem !important;
            font-weight: normal;
        }

        /* BrandId label'ına özel stil */
        .form-container-wrapper .form-group label.required-indicator[for="BrandId"]::before {
            content: '\F0405'; /* MDI car ikonu */
            font-family: 'Material Design Icons';
            font-size: 1.5rem;
            color: #3498db;
            margin-right: 10px;
            vertical-align: middle;
        }

        /* Enum dropdown'ları için genel ikon */
        .input-wrapper .form-select + .input-group-text .mdi {
            color: #3498db; /* Mavi ikon rengi */
        }

        /* Özel buton stili */
        .btn-create-car {
            background: linear-gradient(45deg, #3498db, #2980b9);
            border: none;
            color: white;
            padding: 1.2rem 2.5rem;
            font-size: 1.2rem;
            font-weight: 800;
            border-radius: 15px;
            box-shadow: 0 12px 30px rgba(52, 152, 219, 0.4);
            transition: all 0.4s ease-in-out;
            text-transform: uppercase;
            letter-spacing: 1px;
            display: inline-flex;
            align-items: center;
            justify-content: center; /* Buton içeriğini ortalamak için */
        }

        .btn-create-car:hover {
            background: linear-gradient(45deg, #2980b9, #1f618d);
            transform: translateY(-6px) scale(1.05);
            box-shadow: 0 18px 40px rgba(52, 152, 219, 0.5);
        }

        .btn-create-car i {
            margin-right: 12px;
            font-size: 1.5rem;
        }

        .field-validation-error {
            color: #e74c3c;
            font-size: 0.875em;
            margin-top: 0.75rem;
            display: block;
            font-weight: 500;
        }

        .required-indicator::after {
            content: ' *';
            color: #e74c3c;
            font-weight: bold;
            font-size: 1.1em;
        }

        .form-row {
            margin-bottom: 2rem;
        }

        .form-row .form-group {
            margin-bottom: 0;
        }

        /* Select2'nin kendi placeholder'ına ikon eklemek için */
        .select2-container--default .select2-selection--single .select2-selection__rendered {
            position: relative;
            padding-left: 3.5rem !important; /* İkonun konumu için */
        }

        .select2-container--default .select2-selection--single .select2-selection__rendered .mdi {
            position: absolute;
            left: 12px;
            top: 50%;
            transform: translateY(-50%);
            font-size: 1.4rem;
            color: #3498db;
        }

        .add-brand-button {
            background-color: #28a745; /* Vibrant green */
            color: white;
            border: none;
            border-radius: 8px; /* Slightly rounded corners */
            padding: 0.6rem 1.2rem;
            font-size: 0.9rem;
            font-weight: 600;
            transition: background-color 0.3s ease, transform 0.2s ease;
            margin-left: 15px; /* Consistent spacing */
            display: inline-flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 4px 10px rgba(40, 167, 69, 0.3); /* Subtle shadow */
        }

            .add-brand-button:hover {
                background-color: #218838; /* Darker green on hover */
                transform: translateY(-2px); /* Slight lift effect */
                box-shadow: 0 6px 15px rgba(40, 167, 69, 0.4); /* Enhanced shadow on hover */
            }

            .add-brand-button i {
                margin-right: 8px;
                font-size: 1.1rem; /* Adjusted icon size */
            }

        /* Modal Header Styling */
        .modal-header {
            background-color: #e9ecef; /* Light gray background */
            border-bottom: 1px solid #dee2e6;
            padding: 1rem 1.5rem;
        }

        .modal-title {
            font-size: 1.4rem; /* Slightly larger title */
            font-weight: 700;
            color: #343a40; /* Darker text for emphasis */
        }

        /* Modal Body Styling */
        .modal-body {
            padding: 1.5rem;
        }

            .modal-body .form-label {
                font-weight: 600;
                font-size: 1rem;
                color: #495057;
            }

        #newBrandName {
            border-radius: 8px; /* Consistent rounded corners */
            border: 1px solid #ced4da;
            padding: 0.75rem 1rem; /* More comfortable padding */
            font-size: 1rem;
            transition: border-color 0.3s ease, box-shadow 0.3s ease;
        }

            #newBrandName:focus {
                border-color: #3498db; /* Highlight on focus */
                box-shadow: 0 0 0 0.25rem rgba(52, 152, 219, 0.25); /* Bootstrap-like focus ring */
            }

        /* Error message styling within the modal */
        .field-validation-error {
            color: #e74c3c; /* Red for errors */
            font-size: 0.875em;
            margin-top: 0.5rem;
            display: block; /* Ensure it takes its own line */
        }

        /* Modal Footer Styling */
        .modal-footer {
            background-color: #e9ecef; /* Light gray background */
            border-top: 1px solid #dee2e6;
            padding: 1rem 1.5rem;
            display: flex;
            justify-content: flex-end; /* Align buttons to the right */
        }

            .modal-footer .btn-secondary {
                background-color: #6c757d; /* Standard secondary button color */
                border: none;
                border-radius: 6px;
                padding: 0.6rem 1.2rem;
                font-weight: 500;
                transition: background-color 0.2s ease;
            }

                .modal-footer .btn-secondary:hover {
                    background-color: #5a6268;
                }

            .modal-footer .btn-primary {
                background-color: #007bff; /* Standard primary button color */
                color: white;
                border: none;
                border-radius: 6px;
                padding: 0.6rem 1.2rem;
                font-weight: 500;
                transition: background-color 0.2s ease;
            }

                .modal-footer .btn-primary:hover {
                    background-color: #0056b3;
                }
    </style>
}

<div class="page-content-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-flex align-items-center justify-content-between page-header-styling" style="padding-top: 80px;">
                    <h4 class="mb-0 font-size-24 page-title-text">Add New Car</h4>
                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a href="/Admin/Dashboard">Dashboard</a></li>
                            <li class="breadcrumb-item"><a href="/AdminCar/Index">Car Inventory</a></li>
                            <li class="breadcrumb-item active">Add New Car</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="form-container-wrapper">
                    <h4 class="mb-5">Create Your Next Dream Car</h4>

                    <form asp-action="CreateCar" method="post" id="createCarForm" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="row form-row">
                            <div class="col-12">
                                <div class="form-group">
                                    <label asp-for="BrandId" class="required-indicator">Brand Name</label>
                                    <div class="input-wrapper d-flex align-items-center">
                                        <div class="input-group flex-grow-1">
                                            <span class="input-group-text"><i class="mdi mdi-car-cruise-control"></i></span>
                                            <select asp-for="BrandId" class="form-select" id="brandSelect" asp-items="ViewBag.BrandSelectItems">
                                                <option value="" disabled selected>-- Select a Brand --</option>
                                            </select>
                                        </div>
                                        <button type="button" class="btn add-brand-button" data-bs-toggle="modal" data-bs-target="#addBrandModal">
                                            <i class="mdi mdi-plus"></i> Add Brand
                                        </button>
                                    </div>
                                    <span asp-validation-for="BrandId" class="field-validation-error"></span>
                                </div>
                            </div>
                        </div>

                        <h5 class="form-section-title car-details-title">Car Details</h5>
                        <div class="row form-row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Model" class="required-indicator">Model</label>
                                    <div class="input-wrapper">
                                        <span class="input-group-text"><i class="mdi mdi-car-info"></i></span>
                                        <input asp-for="Model" class="form-control" placeholder="Enter car model" />
                                    </div>
                                    <span asp-validation-for="Model" class="field-validation-error"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="ModelYear" class="required-indicator">Model Year</label>
                                    <div class="input-wrapper">
                                        <span class="input-group-text"><i class="mdi mdi-calendar-range"></i></span>
                                        <input asp-for="ModelYear" class="form-control" placeholder="e.g., 2024" type="number" min="1900" max="2099" />
                                    </div>
                                    <span asp-validation-for="ModelYear" class="field-validation-error"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row form-row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Kilometer" class="required-indicator">Kilometers</label>
                                    <div class="input-wrapper">
                                        <span class="input-group-text"><i class="mdi mdi-road-variant"></i></span>
                                        <input asp-for="Kilometer" class="form-control" placeholder="e.g., 30000" type="number" min="0" />
                                    </div>
                                    <span asp-validation-for="Kilometer" class="field-validation-error"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Seat" class="required-indicator">Seats</label>
                                    <div class="input-wrapper">
                                        <span class="input-group-text"><i class="mdi mdi-seat-flat-angled"></i></span>
                                        <input asp-for="Seat" class="form-control" placeholder="e.g., 5" type="number" min="1" />
                                    </div>
                                    <span asp-validation-for="Seat" class="field-validation-error"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row form-row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Luggage" class="required-indicator">Luggage Capacity</label>
                                    <div class="input-wrapper">
                                        <span class="input-group-text"><i class="mdi mdi-briefcase-variant-outline"></i></span>
                                        <input asp-for="Luggage" class="form-control" placeholder="e.g., 450" type="number" min="0" />
                                    </div>
                                    <span asp-validation-for="Luggage" class="field-validation-error"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Transmission" class="required-indicator">Transmission Type</label>
                                    <div class="input-wrapper">
                                        <span class="input-group-text"><i class="mdi mdi-cog-sync"></i></span>
                                        <select asp-for="Transmission" class="form-select" id="transmissionSelect" asp-items="ViewBag.TransmissionItems">
                                            <option value="" disabled selected>-- Select Transmission --</option>
                                        </select>
                                    </div>
                                    <span asp-validation-for="Transmission" class="field-validation-error"></span>
                                </div>
                            </div>
                        </div>

                        <h5 class="form-section-title specs-title">Specifications</h5>
                        <div class="row form-row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="CarType" class="required-indicator">Car Type</label>
                                    <div class="input-wrapper">
                                        <span class="input-group-text"><i class="mdi mdi-car-variant"></i></span>
                                        <select asp-for="CarType" class="form-select" id="carTypeSelect" asp-items="ViewBag.CarTypeItems">
                                            <option value="" disabled selected>-- Select Car Type --</option>
                                        </select>
                                    </div>
                                    <span asp-validation-for="CarType" class="field-validation-error"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="FuelType" class="required-indicator">Fuel Type</label>
                                    <div class="input-wrapper">
                                        <span class="input-group-text"><i class="mdi mdi-fuel"></i></span>
                                        <select asp-for="FuelType" class="form-select" id="fuelTypeSelect" asp-items="ViewBag.FuelTypeItems">
                                            <option value="" disabled selected>-- Select Fuel Type --</option>
                                        </select>
                                    </div>
                                    <span asp-validation-for="FuelType" class="field-validation-error"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row form-row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="DriveType" class="required-indicator">Drive Type</label>
                                    <div class="input-wrapper">
                                        <span class="input-group-text"><i class="mdi mdi-power-plug"></i></span>
                                        <select asp-for="DriveType" class="form-select" id="driveTypeSelect" asp-items="ViewBag.DriveTypeItems">
                                            <option value="" disabled selected>-- Select Drive Type --</option>
                                        </select>
                                    </div>
                                    <span asp-validation-for="DriveType" class="field-validation-error"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="CoverImageUrl" class="required-indicator">Cover Image URL</label>
                                    <div class="input-wrapper">
                                        <span class="input-group-text"><i class="mdi mdi-link-variant"></i></span>
                                        <input asp-for="CoverImageUrl" class="form-control" placeholder="Paste image URL here" />
                                    </div>
                                    <span asp-validation-for="CoverImageUrl" class="field-validation-error"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row form-row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="BigImageUrl" class="required-indicator">Additional Image URL</label>
                                    <div class="input-wrapper">
                                        <span class="input-group-text"><i class="mdi mdi-image-multiple"></i></span>
                                        <input asp-for="BigImageUrl" class="form-control" placeholder="Paste additional image URL here" />
                                    </div>
                                    <span asp-validation-for="BigImageUrl" class="field-validation-error"></span>
                                </div>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                        {
                            <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
                                <i class="mdi mdi-alert-circle-outline"></i> <strong>Error!</strong> @ViewBag.ErrorMessage
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }

                        <div class="d-flex justify-content-center mt-5 mb-3">
                            <button type="submit" class="btn btn-create-car">
                                <i class="mdi mdi-car-plus"></i> Add New Car
                            </button>
                        </div>

                        <div class="modal fade" id="addBrandModal" tabindex="-1" aria-labelledby="addBrandModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="addBrandModalLabel">Add New Brand</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="mb-3">
                                            <label for="newBrandName" class="form-label">Brand Name</label>
                                            <input type="text" class="form-control" id="newBrandName" placeholder="Enter brand name">
                                            <div id="brandNameError" class="field-validation-error" style="display: none;"></div>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                        <button type="button" class="btn btn-primary" id="saveNewBrandBtn">Save Brand</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    <script>
        $(document).ready(function () {
            // JQuery Validation Ayarları
            $.validator.setDefaults({
                highlight: function (element) {
                    $(element).addClass('is-invalid');
                },
                unhighlight: function (element) {
                    $(element).removeClass('is-invalid');
                },
                errorPlacement: function (error, element) {
                    // Custom error placement for form groups
                    const errorContainer = element.closest('.form-group').find('.field-validation-error');
                    if (errorContainer.length) {
                        errorContainer.html(error.html());
                    } else {
                        // Fallback if .field-validation-error is not found
                        error.insertAfter(element);
                    }
                }
            });

            // Select2 Formatlama Fonksiyonu
            function formatState(state) {
                if (!state.id) {
                    return state.text;
                }
                var iconClass = "mdi mdi-tag-outline";
                var iconColor = "#3498db";

                var stateText = state.text;
                var stateValue = state.id;

                // Marka ikonu
                if (stateValue && stateValue.length === 36) { // Check if stateValue is defined and has the correct length
                    iconClass = "mdi mdi-car-cruise-control";
                }
                // Diğer Enumlar
                else {
                    switch (stateText) {
                        case "Automatic": iconClass = "mdi mdi-cog-sync"; break;
                        case "Manual": iconClass = "mdi mdi-car-shift-pattern"; break;
                        case "Sedan": iconClass = "mdi mdi-car-sedan"; break;
                        case "SUV": iconClass = "mdi mdi-car-suv"; break;
                        case "Gasoline": iconClass = "mdi mdi-fuel-station"; break;
                        case "Diesel": iconClass = "mdi mdi-fuel"; break;
                        case "Electric": iconClass = "mdi mdi-car-electric"; break;
                        case "AWD": iconClass = "mdi mdi-car-traction-control"; break;
                        case "FWD": iconClass = "mdi mdi-power-front"; break; // FWD için
                        case "RWD": iconClass = "mdi mdi-power-rear"; break; // RWD için
                        case "Hybrid": iconClass = "mdi mdi-gas-station"; break; // Hybrid için
                        default: iconClass = "mdi mdi-car-info"; break;
                    }
                }
                var icon = $(`<i class="${iconClass}" style="color:${iconColor}; margin-right: 5px;"></i>`);
                return $('<span>').append(icon).append(stateText);
            }

            // Select2 dropdown'larını başlat
            $('#brandSelect').select2({
                placeholder: "-- Select a Brand --",
                theme: "bootstrap",
                templateResult: formatState,
                templateSelection: formatState
            });
            $('#transmissionSelect').select2({ placeholder: "-- Select Transmission --", theme: "bootstrap", templateResult: formatState, templateSelection: formatState });
            $('#carTypeSelect').select2({ placeholder: "-- Select Car Type --", theme: "bootstrap", templateResult: formatState, templateSelection: formatState });
            $('#fuelTypeSelect').select2({ placeholder: "-- Select Fuel Type --", theme: "bootstrap", templateResult: formatState, templateSelection: formatState });
            $('#driveTypeSelect').select2({ placeholder: "-- Select Drive Type --", theme: "bootstrap", templateResult: formatState, templateSelection: formatState });

            // Form alanı değiştiğinde Select2'nin durumunu güncelle
            $('.form-select').on('change', function () {
                if ($(this).val()) {
                    $(this).removeClass('is-invalid');
                    $(this).closest('.form-group').find('.field-validation-error').text('');
                }
            });

            // Yeni Marka Ekleme Modal'ı Buton Olayı
            $('#saveNewBrandBtn').on('click', function () {
                var newBrandName = $('#newBrandName').val().trim();
                var brandNameErrorDiv = $('#brandNameError');

                // Basic validation for brand name
                if (newBrandName === '') {
                    brandNameErrorDiv.text('Brand name is required.');
                    brandNameErrorDiv.show();
                    $('#newBrandName').addClass('is-invalid');
                    return; // Stop if validation fails
                }

                brandNameErrorDiv.hide();
                $('#newBrandName').removeClass('is-invalid');

                // Prepare the DTO for the AJAX post
                var brandDto = {
                    brandName: newBrandName
                };

                // AJAX request to add the new brand
                axios.post('/AdminCar/AddNewBrandViaAjax', brandDto)
                .then(function (response) {
                    if (response.data.success) {
                        var newBrand = response.data.brand;
                        // Create a new Select2 option and add it to the brandSelect dropdown
                        var newOption = new Option(newBrand.brandName, newBrand.brandId, false, true);
                        $('#brandSelect').append(newOption).trigger('change');

                        // Close the modal and clear the input
                        $('#addBrandModal').modal('hide');
                        $('#newBrandName').val('');

                        // Show success message
                        Swal.fire({
                            icon: 'success',
                            title: 'Success!',
                            text: 'Brand added successfully!',
                            showConfirmButton: false,
                            timer: 1500
                        });
                    } else {
                        // Handle API errors
                        var errorMessage = response.data.message || 'An error occurred.';
                        brandNameErrorDiv.text(errorMessage);
                        brandNameErrorDiv.show();
                        $('#newBrandName').addClass('is-invalid');
                        Swal.fire({
                            icon: 'error',
                            title: 'Error!',
                            text: errorMessage,
                        });
                    }
                })
                .catch(function (error) {
                    // Handle network or unexpected errors
                    var errorMessage = 'An unexpected error occurred while processing your request.';
                    if (error.response && error.response.data && error.response.data.message) {
                        errorMessage = error.response.data.message;
                    } else if (error.message) {
                        errorMessage = error.message;
                    }

                    brandNameErrorDiv.text(errorMessage);
                    brandNameErrorDiv.show();
                    $('#newBrandName').addClass('is-invalid');

                    Swal.fire({
                        icon: 'error',
                        title: 'Error!',
                        text: errorMessage,
                    });
                    console.error('Error adding brand:', error);
                });
            });

            // Clear modal input and error messages when modal is shown
            $('#addBrandModal').on('shown.bs.modal', function () {
                $('#newBrandName').val('');
                $('#newBrandName').removeClass('is-invalid');
                $('#brandNameError').hide().text('');
            });
        });
    </script>
