@model List<ResultBlogContentByBlogIdDto>

<div class="col-md-8 ftco-animate">
    @if (Model != null && Model.Any())
    {
        @foreach (var content in Model)
        {
            switch (content.ContentType)
            {
                case DriveNow.Domain.Enums.BlogContentType.Heading:
                    <h2 class="mb-3 mt-5">@content.Content</h2>
                    break;
                case DriveNow.Domain.Enums.BlogContentType.Paragraph:
                    <p>@content.Content</p>
                    break;
                case DriveNow.Domain.Enums.BlogContentType.Image:
                    <p>
                        <img src="@content.Content" alt="" class="img-fluid">
                    </p>
                    break;
                default:
                    <p>@content.Content</p>
                    break;
            }
        }
    }
    else
    {
        <p>Bu blog için henüz içerik bulunmamaktadır.</p>
    }

    @* **ÖNEMLİ:** Bu View Component içerisinden diğer View Component'leri çağırmayın. *@

    <div class="pt-5 mt-5">
        <h3 class="mb-5">6 Comments</h3>
        @* Bu bileşenler de muhtemelen ana sayfadan çağrılmalıdır. *@
        @await Component.InvokeAsync("_BlogDetailAuthorAboutCompenentPartial")
        @await Component.InvokeAsync("_CommentListByBlogCompenentPartial")
        @await Component.InvokeAsync("_AddCommentCompenentPartial")
    </div>
</div>