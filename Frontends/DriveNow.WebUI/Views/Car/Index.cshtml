@model DriveNow.Application.Features.DTOs.CarListWithCountDto

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<section class="ftco-section bg-light">
    <div class="container">
        <div class="row">
            @if (Model != null && Model.Cars != null && Model.Cars.Any())
            {
                @foreach (var item in Model.Cars)
                {
                    <div class="col-md-4">
                        <div class="car-wrap rounded ftco-animate">
                            <div class="img rounded d-flex align-items-end" style="background-image: url(@item.CoverImageUrl);">
                            </div>
                            <div class="text">
                                <h2 class="mb-0"><a href="/Car/CarDetail/@item.CarPricingId">@item.Model (@item.ModelYear)</a></h2>
                                <div class="d-flex mb-3">
                                    <span class="cat">@item.Brand</span>
                                    <p class="price ml-auto">$@item.Price <span>/day</span></p>
                                </div>
                                <p class="d-flex mb-0 d-block">
                                    <a href="#" class="btn btn-primary py-2 mr-1">Book now</a>
                                    <a href="/Car/CarDetail/@item.CarPricingId" class="btn btn-secondary py-2 ml-1">Details</a>
                                </p>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12 text-center">
                    <p>No cars found.</p>
                </div>
            }
        </div>
    </div>
</section>