@model List<DriveNow.Dtos.CategoryDtos.ResultCategoryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: #4A90E2;
            --danger-color: #E74C3C;
            --warning-color: #F39C12;
            --card-bg: #FFFFFF;
            --shadow-light: 0 4px 12px rgba(0,0,0,0.08);
            --shadow-hover: 0 8px 24px rgba(0,0,0,0.12);
        }

        .container-custom {
            max-width: 1200px;
            margin: auto;
            padding: 4.5rem 1.5rem;
        }

        .page-header-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2.5rem;
        }

        .page-title {
            font-size: 2rem;
            font-weight: 700;
            color: #34495E;
        }

        .btn-add {
            background-color: var(--primary-color);
            color: #fff;
            border-radius: 12px;
            padding: 0.8rem 1.8rem;
            font-weight: 600;
            border: none;
        }

            .btn-add:hover {
                background-color: #3A81D1;
                box-shadow: var(--shadow-hover);
            }

        .category-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill,minmax(280px,1fr));
            gap: 2rem;
        }

        .category-card {
            background: var(--card-bg);
            border-radius: 16px;
            padding: 1.5rem;
            box-shadow: var(--shadow-light);
            transition: 0.3s;
            text-align: center;
        }

            .category-card:hover {
                transform: translateY(-5px);
                box-shadow: var(--shadow-hover);
            }

        .category-name {
            font-size: 1.3rem;
            font-weight: 700;
            margin-bottom: 1rem;
        }

        .card-actions {
            display: flex;
            justify-content: center;
            gap: .5rem;
            margin-top: 1rem;
        }

        .btn-update {
            background: var(--warning-color);
            color: #fff;
            border: none;
            border-radius: 8px;
            padding: .5rem 1rem;
        }

        .btn-delete {
            background: var(--danger-color);
            color: #fff;
            border: none;
            border-radius: 8px;
            padding: .5rem 1rem;
        }

        .modal-content {
            border-radius: 12px;
        }
    </style>
</head>

<div class="container-custom">
    <div class="page-header-container">
        <h2 class="page-title">Category Management</h2>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createCategoryModal">
            <i class="fas fa-plus"></i> Add Category
        </button>
    </div>

    @if (Model.Any())
    {
            <div class="category-grid">
            @foreach (var category in Model)
            {
                        <div class="category-card"
                             data-id="@category.CategoryId"
                             data-name="@category.CategoryName">
                            <div class="category-name">@category.CategoryName</div>
                            <div class="card-actions">
                                <button class="btn btn-warning btn-update" data-bs-toggle="modal" data-bs-target="#updateCategoryModal">Update</button>
                                <button class="btn btn-danger btn-delete" onclick="showDeleteConfirmation('@category.CategoryId')">Delete</button>
                            </div>
                        </div>
            }
            </div>
    }
    else
    {
            <div class="text-center p-5 text-muted">📋 No categories found. Add a new one.</div>
    }
</div>

<!-- Create Modal -->
<div class="modal fade" id="createCategoryModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header"><h5>Create Category</h5></div>
            <div class="modal-body">
                <form id="createCategoryForm">
                    <input class="form-control mb-2" placeholder="Category Name" name="CategoryName" required />
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button class="btn btn-primary" id="saveCategoryBtn">Save</button>
            </div>
        </div>
    </div>
</div>

<!-- Update Modal -->
<div class="modal fade" id="updateCategoryModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header"><h5>Update Category</h5></div>
            <div class="modal-body">
                <form id="updateCategoryForm">
                    <input type="hidden" id="updateCategoryId" />
                    <input class="form-control mb-2" id="updateCategoryName" placeholder="Category Name" required />
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button class="btn btn-primary" id="saveUpdateCategoryBtn">Update</button>
            </div>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteConfirmationModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered modal-sm">
        <div class="modal-content">
            <div class="modal-body text-center">Are you sure you want to delete this category?</div>
            <div class="modal-footer justify-content-center">
                <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button class="btn btn-danger" id="confirmDeleteBtn">Delete</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
        <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
        <script>
            let categoryToDelete = null;

            // Create
            $("#saveCategoryBtn").click(function () {
                let dto = {
                    CategoryName: $("#createCategoryForm [name=CategoryName]").val()
                };
                $.ajax({
                    url: '/Admin/AdminCategory/CreateCategory',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(dto),
                    success: () => location.reload(),
                    error: xhr => alert("Error: " + xhr.responseText)
                });
            });

            // Update modal fill
            $("#updateCategoryModal").on("show.bs.modal", function (event) {
                let card = $(event.relatedTarget).closest(".category-card");
                $("#updateCategoryId").val(card.data("id"));
                $("#updateCategoryName").val(card.data("name"));
            });

            // Update save
            $("#saveUpdateCategoryBtn").click(function () {
                let dto = {
                    CategoryId: $("#updateCategoryId").val(),
                    CategoryName: $("#updateCategoryName").val()
                };
                $.ajax({
                    url: '/Admin/AdminCategory/UpdateCategory',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(dto),
                    success: () => location.reload(),
                    error: xhr => alert("Error: " + xhr.responseText)
                });
            });

            // Delete
            function showDeleteConfirmation(id) {
                categoryToDelete = id;
                var modal = new bootstrap.Modal(document.getElementById("deleteConfirmationModal"));
                modal.show();
            }
            $("#confirmDeleteBtn").click(function () {
                $.ajax({
                    url: '/Admin/AdminCategory/DeleteCategory/' + categoryToDelete,
                    type: 'DELETE',
                    success: () => location.reload(),
                    error: xhr => alert("Error: " + xhr.responseText)
                });
            });
        </script>
}
