@model List<DriveNow.Dtos.AboutDtos.ResultAboutDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: #4A90E2;
            --danger-color: #E74C3C;
            --warning-color: #F39C12;
            --card-bg: #FFFFFF;
            --shadow-light: 0 4px 12px rgba(0,0,0,0.08);
            --shadow-hover: 0 8px 24px rgba(0,0,0,0.12);
        }

        .container-custom {
            max-width: 1200px;
            margin: auto;
            padding: 4.5rem 1.5rem;
        }

        .page-header-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2.5rem;
        }

        .page-title {
            font-size: 2rem;
            font-weight: 700;
            color: #34495E;
        }

        .btn-add {
            background-color: var(--primary-color);
            color: #fff;
            border-radius: 12px;
            padding: 0.8rem 1.8rem;
            font-weight: 600;
            border: none;
        }

            .btn-add:hover {
                background-color: #3A81D1;
                box-shadow: var(--shadow-hover);
            }

        .about-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill,minmax(320px,1fr));
            gap: 2rem;
        }

        .about-card {
            background: var(--card-bg);
            border-radius: 16px;
            padding: 1.5rem;
            box-shadow: var(--shadow-light);
            transition: 0.3s;
            position: relative;
        }

            .about-card:hover {
                transform: translateY(-5px);
                box-shadow: var(--shadow-hover);
            }

        .about-title {
            font-size: 1.3rem;
            font-weight: 700;
            margin-bottom: .5rem;
        }

        .about-desc {
            font-size: .95rem;
            color: #7F8C8D;
            margin-bottom: 1rem;
        }

        .about-img {
            width: 100%;
            border-radius: 10px;
            margin-bottom: 1rem;
        }

        .card-actions {
            display: flex;
            gap: .5rem;
            margin-top: 1rem;
        }

        .btn-update {
            background: var(--warning-color);
            color: #fff;
            border: none;
            border-radius: 8px;
            padding: .5rem 1rem;
        }

        .btn-delete {
            background: var(--danger-color);
            color: #fff;
            border: none;
            border-radius: 8px;
            padding: .5rem 1rem;
        }

        .modal-content {
            border-radius: 12px;
        }
    </style>
</head>

<div class="container-custom">
    <div class="page-header-container">
        <h2 class="page-title">About Management</h2>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createAboutModal">
            <i class="fas fa-plus"></i> Add About
        </button>
    </div>
    <!-- ⚠️ Info Alert -->
    <div class="alert alert-warning d-flex align-items-center mb-4" role="alert">
        <i class="fas fa-exclamation-triangle me-2"></i>
        <div>
            For theme consistency, the <strong>About section</strong> should only contain <strong>one item</strong>.
            Please avoid creating multiple entries.
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="about-grid">
            @foreach (var about in Model)
            {
                <div class="about-card"
                     data-id="@about.AboutId"
                     data-title="@about.Title"
                     data-description="@about.Description"
                     data-image="@about.ImageUrl">
                    <img src="@about.ImageUrl" class="about-img" alt="@about.Title" />
                    <div class="about-title">@about.Title</div>
                    <div class="about-desc">@about.Description</div>
                    <div class="card-actions">
                        <button class="btn btn-warning btn-update" data-bs-toggle="modal" data-bs-target="#updateAboutModal">Update</button>
                        <button class="btn btn-danger btn-delete" onclick="showDeleteConfirmation('@about.AboutId')">Delete</button>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center p-5 text-muted">📋 No about info found. Add a new one.</div>
    }
</div>


<!-- Create Modal -->
<div class="modal fade" id="createAboutModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header"><h5>Create About</h5></div>
            <div class="modal-body">
                <form id="createAboutForm">
                    <input class="form-control mb-2" placeholder="Title" name="Title" required />
                    <textarea class="form-control mb-2" placeholder="Description" name="Description"></textarea>
                    <input class="form-control mb-2" placeholder="Image URL" name="ImageUrl" />
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button class="btn btn-primary" id="saveAboutBtn">Save</button>
            </div>
        </div>
    </div>
</div>

<!-- Update Modal -->
<div class="modal fade" id="updateAboutModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header"><h5>Update About</h5></div>
            <div class="modal-body">
                <form id="updateAboutForm">
                    <input type="hidden" id="updateAboutId" />
                    <input class="form-control mb-2" id="updateTitle" placeholder="Title" required />
                    <textarea class="form-control mb-2" id="updateDescription" placeholder="Description"></textarea>
                    <input class="form-control mb-2" id="updateImageUrl" placeholder="Image URL" />
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button class="btn btn-primary" id="saveUpdateAboutBtn">Update</button>
            </div>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteConfirmationModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered modal-sm">
        <div class="modal-content">
            <div class="modal-body text-center">Are you sure you want to delete this item?</div>
            <div class="modal-footer justify-content-center">
                <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button class="btn btn-danger" id="confirmDeleteBtn">Delete</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        let aboutToDelete = null;

        // Create
        $("#saveAboutBtn").click(function () {
            let dto = {
                Title: $("#createAboutForm [name=Title]").val(),
                Description: $("#createAboutForm [name=Description]").val(),
                ImageUrl: $("#createAboutForm [name=ImageUrl]").val()
            };
            $.ajax({
                url: '/Admin/AdminAbout/CreateAbout',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(dto),
                success: () => location.reload(),
                error: xhr => alert("Error: " + xhr.responseText)
            });
        });

        // Update modal fill
        $("#updateAboutModal").on("show.bs.modal", function (event) {
            let card = $(event.relatedTarget).closest(".about-card");
            $("#updateAboutId").val(card.data("id"));
            $("#updateTitle").val(card.data("title"));
            $("#updateDescription").val(card.data("description"));
            $("#updateImageUrl").val(card.data("image"));
        });

        // Update save
        $("#saveUpdateAboutBtn").click(function () {
            let dto = {
                AboutId: $("#updateAboutId").val(),
                Title: $("#updateTitle").val(),
                Description: $("#updateDescription").val(),
                ImageUrl: $("#updateImageUrl").val()
            };
            $.ajax({
                url: '/Admin/AdminAbout/UpdateAbout',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(dto),
                success: () => location.reload(),
                error: xhr => alert("Error: " + xhr.responseText)
            });
        });

        // Delete
        function showDeleteConfirmation(id) {
            aboutToDelete = id;
            var modal = new bootstrap.Modal(document.getElementById("deleteConfirmationModal"));
            modal.show();
        }
        $("#confirmDeleteBtn").click(function () {
            $.ajax({
                url: '/Admin/AdminAbout/DeleteAbout/' + aboutToDelete,
                type: 'DELETE',
                success: () => location.reload(),
                error: xhr => alert("Error: " + xhr.responseText)
            });
        });
    </script>
}
