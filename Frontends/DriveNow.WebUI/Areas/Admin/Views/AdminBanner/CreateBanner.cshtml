@using DriveNow.Dtos.BannerDtos
@model CreateBannerDto
@{
    ViewData["Title"] = "CreateBanner";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<style>
    body {
        font-family: 'Inter', sans-serif;
        background-color: #f3f2f7;
    }

    .page-content-wrapper {
        padding-top: 100px;
    }

    .page-header-styling {
        padding-bottom: 20px;
        border-bottom: 1px solid #e9ecef;
    }

    .page-title-text {
        color: #495057;
        font-weight: 600;
    }

    .card-form-style {
        border-radius: 1rem;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
        border: none;
        padding: 2rem;
    }

    .form-label {
        font-weight: 600;
        color: #495057;
    }

    .form-control {
        border-radius: 0.75rem;
        padding: 0.75rem 1rem;
        border: 1px solid #ced4da;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            box-shadow: 0 0 0 0.25rem rgba(85, 110, 230, 0.25);
            border-color: #556ee6;
        }

    .btn-submit {
        background-color: #556ee6;
        color: white;
        border: none;
        border-radius: 0.75rem;
        padding: 0.75rem 2rem;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-submit:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 10px rgba(85, 110, 230, 0.3);
            background-color: #4b66d4;
        }

    .btn-back {
        background-color: #6c757d;
        color: white;
        border: none;
        border-radius: 0.75rem;
        padding: 0.75rem 2rem;
        font-weight: 600;
        transition: all 0.3s ease;
        text-decoration: none;
    }

        .btn-back:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 10px rgba(108, 117, 125, 0.3);
            background-color: #5a6268;
        }

    .form-group-margin {
        margin-bottom: 1.5rem;
    }
</style>

<div class="page-content-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-flex align-items-center justify-content-between page-header-styling">
                    <h4 class="mb-0 font-size-24 page-title-text">Add New Banner</h4>
                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a href="/Admin/Dashboard">Dashboard</a></li>
                            <li class="breadcrumb-item"><a href="/Admin/AdminBanner/Index">Banner Management</a></li>
                            <li class="breadcrumb-item active">Add New Banner</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card card-form-style mt-4">
                    <div class="card-body">
                        <form method="post" asp-area="Admin" asp-controller="AdminBanner" asp-action="CreateBanner">
                            <div class="form-group form-group-margin">
                                <label asp-for="Title" class="form-label">Banner Title</label>
                                <input asp-for="Title" class="form-control" placeholder="Enter banner title" required />
                            </div>
                            <div class="form-group form-group-margin">
                                <label asp-for="Description" class="form-label">Description</label>
                                <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter banner description" required></textarea>
                            </div>
                            <div class="form-group form-group-margin">
                                <label asp-for="VideoDescription" class="form-label">Video Description</label>
                                <input asp-for="VideoDescription" class="form-control" placeholder="Enter video description" required />
                            </div>
                            <div class="form-group form-group-margin">
                                <label asp-for="VideoUrl" class="form-label">Video URL</label>
                                <input asp-for="VideoUrl" class="form-control" placeholder="Enter video URL" required />
                            </div>
                            <div class="d-flex justify-content-end gap-2">
                                <a href="@Url.Action("Index", "AdminBanner", new { area = "Admin" })" class="btn btn-secondary btn-back">Back to List</a>
                                <button type="submit" class="btn btn-success btn-submit">Save Banner</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

