@model DriveNow.Dtos.BannerDtos.UpdateBannerDto
@{
    ViewData["Title"] = "UpdateBanner";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<style>
    body {
        background-color: #f3f2f7;
        font-family: 'Inter', sans-serif;
    }

    .page-content-wrapper {
        padding-top: 30px;
    }

    .page-header-styling {
        padding-bottom: 20px;
        border-bottom: 1px solid #e9ecef;
    }

    .page-title-text {
        color: #495057;
        font-weight: 600;
    }

    .form-card {
        border-radius: 1rem;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
        border: none;
        padding: 2rem;
        margin-top: 2rem;
    }

    .form-control {
        border-radius: 0.75rem;
        border: 1px solid #ced4da;
        padding: 0.75rem 1rem;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

        .form-control:focus {
            border-color: #556ee6;
            box-shadow: 0 0 0 0.2rem rgba(85, 110, 230, 0.25);
        }

    .btn-submit {
        background-color: #556ee6;
        border-color: #556ee6;
        color: white;
        font-weight: 600;
        padding: 0.75rem 2rem;
        border-radius: 1rem;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .btn-submit:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 10px rgba(85, 110, 230, 0.3);
            color: white;
        }

    .btn-back {
        background-color: #6c757d;
        border-color: #6c757d;
        color: white;
        font-weight: 600;
        padding: 0.75rem 2rem;
        border-radius: 1rem;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .btn-back:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 10px rgba(108, 117, 125, 0.3);
            color: white;
        }

    .form-group label {
        font-weight: 500;
        color: #495057;
        margin-bottom: 0.5rem;
    }
</style>

<div class="page-content-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-flex align-items-center justify-content-between page-header-styling" style="padding-top: 80px;">
                    <h4 class="mb-0 font-size-24 page-title-text">Update Banner</h4>
                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a href="/Admin/Dashboard">Dashboard</a></li>
                            <li class="breadcrumb-item"><a href="/Admin/AdminBanner/Index">Banner Management</a></li>
                            <li class="breadcrumb-item active">Update Banner</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <div class="card form-card">
                    <form asp-area="Admin" asp-controller="AdminBanner" asp-action="UpdateBanner" method="post">
                        <input type="hidden" asp-for="BannerId" />

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label">Title</label>
                            <input type="text" asp-for="Title" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="3" required></textarea>
                        </div>
                        <div class="mb-3">
                            <label asp-for="VideoDescription" class="form-label">Video Description</label>
                            <textarea asp-for="VideoDescription" class="form-control" rows="3" required></textarea>
                        </div>
                        <div class="mb-3">
                            <label asp-for="VideoUrl" class="form-label">Video URL</label>
                            <input type="url" asp-for="VideoUrl" class="form-control" required />
                        </div>
                        <div class="d-flex justify-content-end gap-2">
                            <a href="/Admin/AdminBanner/Index" class="btn btn-secondary btn-back">Back to List</a>
                            <button type="submit" class="btn btn-submit">Save Changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
