@model List<DriveNow.Dtos.BannerDtos.ResultBannerDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: #4A90E2;
            --danger-color: #E74C3C;
            --warning-color: #F39C12;
            --card-bg: #fff;
            --shadow-light: 0 4px 12px rgba(0, 0, 0, 0.08);
            --shadow-hover: 0 8px 24px rgba(0, 0, 0, 0.12);
        }

        body {
            background-color: #f8f9f9;
            font-family: 'Inter', sans-serif;
        }

        .container-custom {
            max-width: 1200px;
            margin: auto;
            padding: 4.5rem 1.5rem;
        }

        .page-header-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2.5rem;
        }

        .page-title {
            font-size: 2rem;
            font-weight: 700;
            color: #34495E;
        }

        .btn-add {
            background-color: var(--primary-color);
            color: #fff;
            border-radius: 12px;
            padding: 0.8rem 1.8rem;
            font-weight: 600;
            border: none;
            transition: all 0.2s ease;
        }

            .btn-add:hover {
                background-color: #3A81D1;
                box-shadow: var(--shadow-hover);
                transform: translateY(-2px);
            }

        .banner-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
            gap: 2rem;
        }

        .banner-card {
            background: var(--card-bg);
            border-radius: 16px;
            padding: 1.5rem;
            box-shadow: var(--shadow-light);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            position: relative;
            overflow: hidden;
        }

            .banner-card:hover {
                transform: translateY(-6px);
                box-shadow: var(--shadow-hover);
            }

            .banner-card::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                height: 6px;
                width: 100%;
                background: linear-gradient(90deg, var(--primary-color), var(--warning-color), var(--danger-color));
            }

        .banner-title {
            font-size: 1.3rem;
            font-weight: 700;
            margin-bottom: .5rem;
            color: #2c3e50;
        }

        .banner-desc {
            font-size: .95rem;
            color: #7f8c8d;
            margin-bottom: 1rem;
        }

        .banner-video {
            font-size: .85rem;
            color: #555;
            margin-bottom: .5rem;
        }

        .video-badge {
            display: inline-block;
            background: #ecf0f1;
            color: #2c3e50;
            padding: 0.2rem 0.6rem;
            font-size: 0.8rem;
            border-radius: 6px;
            margin-top: 0.3rem;
        }

        .card-actions {
            display: flex;
            gap: .5rem;
            margin-top: 1rem;
        }

        .btn-update, .btn-delete {
            border: none;
            border-radius: 8px;
            padding: .5rem 1rem;
            font-weight: 600;
            transition: all 0.2s ease;
        }

        .btn-update {
            background: var(--warning-color);
            color: #fff;
        }

            .btn-update:hover {
                background: #d68910;
                transform: translateY(-2px);
            }

        .btn-delete {
            background: var(--danger-color);
            color: #fff;
        }

            .btn-delete:hover {
                background: #c0392b;
                transform: translateY(-2px);
            }

        .no-data {
            background: #fff;
            padding: 3rem;
            border-radius: 12px;
            box-shadow: var(--shadow-light);
            color: #7f8c8d;
            font-size: 1.1rem;
        }

        .modal-content {
            border-radius: 12px;
            box-shadow: var(--shadow-hover);
        }
    </style>
</head>

<div class="container-custom">
    <div class="page-header-container">
        <h2 class="page-title">Banner Management</h2>
        <button type="button" class="btn btn-add" data-bs-toggle="modal" data-bs-target="#createBannerModal">
            <i class="fas fa-plus"></i> Add Banner
        </button>
    </div>

    @if (Model.Any())
    {
        <div class="banner-grid">
            @foreach (var banner in Model)
            {
                <div class="banner-card"
                     data-id="@banner.BannerId"
                     data-title="@banner.Title"
                     data-description="@banner.Description"
                     data-videodescription="@banner.VideoDescription"
                     data-videourl="@banner.VideoUrl">
                    <div class="banner-title">@banner.Title</div>
                    <div class="banner-desc">@banner.Description</div>
                    @if (!string.IsNullOrEmpty(banner.VideoUrl))
                    {
                        <div class="video-badge"><i class="fas fa-link"></i> @banner.VideoUrl</div>
                    }
                    <div class="card-actions">
                        <button class="btn btn-update" data-bs-toggle="modal" data-bs-target="#updateBannerModal">Update</button>
                        <button class="btn btn-delete" onclick="showDeleteConfirmation('@banner.BannerId')">Delete</button>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center no-data">
            <i class="fas fa-flag fa-2x mb-3 text-muted"></i>
            <p>📋 No banners found. Add your first banner to get started.</p>
        </div>
    }
</div>

<!-- Create Modal -->
<div class="modal fade" id="createBannerModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header"><h5>Create Banner</h5></div>
            <div class="modal-body">
                <form id="createBannerForm">
                    <input class="form-control mb-2" placeholder="Title" name="Title" required />
                    <textarea class="form-control mb-2" placeholder="Description" name="Description"></textarea>
                    <textarea class="form-control mb-2" placeholder="Video Description" name="VideoDescription"></textarea>
                    <input class="form-control mb-2" placeholder="Video URL" name="VideoUrl" />
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button class="btn btn-primary" id="saveBannerBtn">Save</button>
            </div>
        </div>
    </div>
</div>

<!-- Update Modal -->
<div class="modal fade" id="updateBannerModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header"><h5>Update Banner</h5></div>
            <div class="modal-body">
                <form id="updateBannerForm">
                    <input type="hidden" id="updateBannerId" />
                    <input class="form-control mb-2" id="updateTitle" placeholder="Title" required />
                    <textarea class="form-control mb-2" id="updateDescription" placeholder="Description"></textarea>
                    <textarea class="form-control mb-2" id="updateVideoDescription" placeholder="Video Description"></textarea>
                    <input class="form-control mb-2" id="updateVideoUrl" placeholder="Video URL" />
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button class="btn btn-primary" id="saveUpdateBannerBtn">Update</button>
            </div>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteConfirmationModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered modal-sm">
        <div class="modal-content">
            <div class="modal-body text-center">Are you sure you want to delete this banner?</div>
            <div class="modal-footer justify-content-center">
                <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button class="btn btn-danger" id="confirmDeleteBtn">Delete</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        let bannerToDelete = null;

        // Create
        $("#saveBannerBtn").click(function () {
            let dto = {
                Title: $("#createBannerForm [name=Title]").val(),
                Description: $("#createBannerForm [name=Description]").val(),
                VideoDescription: $("#createBannerForm [name=VideoDescription]").val(),
                VideoUrl: $("#createBannerForm [name=VideoUrl]").val()
            };
            $.ajax({
                url: '/Admin/AdminBanner/CreateBanner',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(dto),
                success: () => location.reload(),
                error: xhr => alert("Error: " + xhr.responseText)
            });
        });

        // Update modal fill
        $("#updateBannerModal").on("show.bs.modal", function (event) {
            let card = $(event.relatedTarget).closest(".banner-card");
            $("#updateBannerId").val(card.data("id"));
            $("#updateTitle").val(card.data("title"));
            $("#updateDescription").val(card.data("description"));
            $("#updateVideoDescription").val(card.data("videodescription"));
            $("#updateVideoUrl").val(card.data("videourl"));
        });

        // Update save
        $("#saveUpdateBannerBtn").click(function () {
            let dto = {
                BannerId: $("#updateBannerId").val(),
                Title: $("#updateTitle").val(),
                Description: $("#updateDescription").val(),
                VideoDescription: $("#updateVideoDescription").val(),
                VideoUrl: $("#updateVideoUrl").val()
            };
            $.ajax({
                url: '/Admin/AdminBanner/UpdateBanner',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(dto),
                success: () => location.reload(),
                error: xhr => alert("Error: " + xhr.responseText)
            });
        });

        // Delete
        function showDeleteConfirmation(id) {
            bannerToDelete = id;
            var modal = new bootstrap.Modal(document.getElementById("deleteConfirmationModal"));
            modal.show();
        }
        $("#confirmDeleteBtn").click(function () {
            $.ajax({
                url: '/Admin/AdminBanner/DeleteBanner/' + bannerToDelete,
                type: 'DELETE',
                success: () => location.reload(),
                error: xhr => alert("Error: " + xhr.responseText)
            });
        });
    </script>
}
