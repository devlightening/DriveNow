@using DriveNow.Dtos.AuthorDtos
@model List<ResultAuthorDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: #4A90E2;
            --danger-color: #E74C3C;
            --warning-color: #F39C12;
            --card-bg: #FFFFFF;
            --shadow-light: 0 4px 12px rgba(0,0,0,0.08);
            --shadow-hover: 0 8px 24px rgba(0,0,0,0.12);
        }

        .container-custom {
            max-width: 1200px;
            margin: auto;
            padding: 4.5rem 1.5rem;
        }

        .page-header-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2.5rem;
        }

        .page-title {
            font-size: 2rem;
            font-weight: 700;
            color: #34495E;
        }

        .btn-add {
            background-color: var(--primary-color);
            color: #fff;
            border-radius: 12px;
            padding: 0.8rem 1.8rem;
            font-weight: 600;
            border: none;
        }

            .btn-add:hover {
                background-color: #3A81D1;
                box-shadow: var(--shadow-hover);
            }

        .author-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill,minmax(320px,1fr));
            gap: 2rem;
        }

        .author-card {
            background: var(--card-bg);
            border-radius: 16px;
            padding: 1.5rem;
            box-shadow: var(--shadow-light);
            transition: 0.3s;
            position: relative;
            text-align: center;
        }

            .author-card:hover {
                transform: translateY(-5px);
                box-shadow: var(--shadow-hover);
            }

        .author-img {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            object-fit: cover;
            margin-bottom: 1rem;
        }

        .author-name {
            font-size: 1.3rem;
            font-weight: 700;
            margin-bottom: .5rem;
        }

        .author-desc {
            font-size: .95rem;
            color: #7F8C8D;
            margin-bottom: 1rem;
        }

        .card-actions {
            display: flex;
            justify-content: center;
            gap: .5rem;
        }

        .btn-update {
            background: var(--warning-color);
            color: #fff;
            border: none;
            border-radius: 8px;
            padding: .5rem 1rem;
        }

        .btn-delete {
            background: var(--danger-color);
            color: #fff;
            border: none;
            border-radius: 8px;
            padding: .5rem 1rem;
        }

        .modal-content {
            border-radius: 12px;
        }
    </style>
</head>

<div class="container-custom">
    <div class="page-header-container">
        <h2 class="page-title">Author Management</h2>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createAuthorModal">
            <i class="fas fa-plus"></i> Add Author
        </button>
    </div>

    @if (Model.Any())
    {
        <div class="author-grid">
            @foreach (var author in Model)
            {
                <div class="author-card"
                     data-id="@author.AuthorId"
                     data-name="@author.AuthorName"
                     data-description="@author.Description"
                     data-image="@author.ImageUrl">
                    <img src="@author.ImageUrl" class="author-img" alt="@author.AuthorName" />
                    <div class="author-name">@author.AuthorName</div>
                    <div class="author-desc">@author.Description</div>
                    <div class="card-actions">
                        <button class="btn btn-warning btn-update" data-bs-toggle="modal" data-bs-target="#updateAuthorModal">Update</button>
                        <button class="btn btn-danger btn-delete" onclick="showDeleteConfirmation('@author.AuthorId')">Delete</button>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center p-5 text-muted">📋 No authors found. Add a new one.</div>
    }
</div>

<!-- Create Modal -->
<div class="modal fade" id="createAuthorModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header"><h5>Create Author</h5></div>
            <div class="modal-body">
                <form id="createAuthorForm">
                    <input class="form-control mb-2" placeholder="Author Name" name="AuthorName" required />
                    <textarea class="form-control mb-2" placeholder="Description" name="Description"></textarea>
                    <input class="form-control mb-2" placeholder="Image URL" name="ImageUrl" />
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button class="btn btn-primary" id="saveAuthorBtn">Save</button>
            </div>
        </div>
    </div>
</div>

<!-- Update Modal -->
<div class="modal fade" id="updateAuthorModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header"><h5>Update Author</h5></div>
            <div class="modal-body">
                <form id="updateAuthorForm">
                    <input type="hidden" id="updateAuthorId" />
                    <input class="form-control mb-2" id="updateAuthorName" placeholder="Author Name" required />
                    <textarea class="form-control mb-2" id="updateDescription" placeholder="Description"></textarea>
                    <input class="form-control mb-2" id="updateImageUrl" placeholder="Image URL" />
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button class="btn btn-primary" id="saveUpdateAuthorBtn">Update</button>
            </div>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteConfirmationModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered modal-sm">
        <div class="modal-content">
            <div class="modal-body text-center">Are you sure you want to delete this author?</div>
            <div class="modal-footer justify-content-center">
                <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button class="btn btn-danger" id="confirmDeleteBtn">Delete</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        let authorToDelete = null;

        // Create
        $("#saveAuthorBtn").click(function () {
            let dto = {
                AuthorName: $("#createAuthorForm [name=AuthorName]").val(),
                Description: $("#createAuthorForm [name=Description]").val(),
                ImageUrl: $("#createAuthorForm [name=ImageUrl]").val()
            };
            $.ajax({
                url: '/Admin/AdminAuthor/CreateAuthor',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(dto),
                success: () => location.reload(),
                error: xhr => alert("Error: " + xhr.responseText)
            });
        });

        // Update modal fill
        $("#updateAuthorModal").on("show.bs.modal", function (event) {
            let card = $(event.relatedTarget).closest(".author-card");
            $("#updateAuthorId").val(card.data("id"));
            $("#updateAuthorName").val(card.data("name"));
            $("#updateDescription").val(card.data("description"));
            $("#updateImageUrl").val(card.data("image"));
        });

        // Update save
        $("#saveUpdateAuthorBtn").click(function () {
            let dto = {
                AuthorId: $("#updateAuthorId").val(),
                AuthorName: $("#updateAuthorName").val(),
                Description: $("#updateDescription").val(),
                ImageUrl: $("#updateImageUrl").val()
            };
            $.ajax({
                url: '/Admin/AdminAuthor/UpdateAuthor',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(dto),
                success: () => location.reload(),
                error: xhr => alert("Error: " + xhr.responseText)
            });
        });

        // Delete
        function showDeleteConfirmation(id) {
            authorToDelete = id;
            var modal = new bootstrap.Modal(document.getElementById("deleteConfirmationModal"));
            modal.show();
        }
        $("#confirmDeleteBtn").click(function () {
            $.ajax({
                url: '/Admin/AdminAuthor/DeleteAuthor/' + authorToDelete,
                type: 'DELETE',
                success: () => location.reload(),
                error: xhr => alert("Error: " + xhr.responseText)
            });
        });
    </script>
}
